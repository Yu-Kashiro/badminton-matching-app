<h1>Edit Profile</h1>

<%= form_with(model: @profile, url: profile_path, method: 'put', local: true) do |f| %>

  <div class="field">
    <%= f.label :nickname %>
    <%= f.text_field :nickname %>
  </div>

  <div class="field">
    <%= f.label :gender %>
    <%= f.select :gender, [['Male', 1], ['Female', 2], ['Other', 3]] %>
  </div>

  <div class="field">
    <%= f.label :birthday %>
    <%= f.date_select :birthday %>
  </div>

  <div class="field">
    <%= f.label :years_of_experience %>
    <%= f.number_field :years_of_experience %>
  </div>

  <div class="field">
    <%= f.label :level %>
    <%= f.select :level, [['Beginner', 1], ['Intermediate', 2], ['Advanced', 3]] %>
  </div>

  <div class="field">
    <%= f.label :area %>
    <%= f.select :area, (1..47).map { |n| [n, n] } %>
  </div>

  <div class="field">
    <%= f.label :introduction %>
    <%= f.text_area :introduction %>
  </div>

  <div class="actions">
    <%= f.submit "Update Profile" %>
  </div>
<% end %>

<%= link_to 'Back', profile_path %>